<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/itemMessage_linearlayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/itemMessage_linearlayout_destination"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/itemMessage_imageView_profile"
            android:layout_width="50dp"
            android:layout_height="50dp" />

        <TextView
            android:id="@+id/itemMessage_textView_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

        <TextView
            android:id="@+id/itemMessage_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

</LinearLayout>